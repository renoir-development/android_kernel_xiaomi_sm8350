# DTBO
CONFIG_BUILD_ARM64_DT_OVERLAY=y

# Cmdline
CONFIG_CMDLINE="ramoops_memreserve=4M"
CONFIG_CMDLINE_EXTEND=y

# Clang
CONFIG_LTO_CLANG=y
CONFIG_CFI_CLANG=y

# Touchscreen
CONFIG_TOUCHSCREEN_ST=n
CONFIG_ST_TRUSTED_TOUCH=n
CONFIG_TOUCHSCREEN_FTS=n
CONFIG_FTS_TRUSTED_TOUCH=n
CONFIG_TOUCHSCREEN_NT36XXX=n
CONFIG_NOVATEK_TRUSTED_TOUCH=n
CONFIG_INPUT_TOUCHSCREEN=y

# Fingerprint
CONFIG_INPUT_FINGERPRINT=y

# Ir
CONFIG_RC_CORE=y
CONFIG_LIRC=y
CONFIG_RC_DECODERS=y
CONFIG_RC_DEVICES=y
CONFIG_IR_SPI=m

# WiFi
CONFIG_QCA_CLD_WLAN=m
CONFIG_CNSS2=m

# Proximity
CONFIG_MIUS_PROXIMITY=y

# Mi
CONFIG_MI_HARDWARE_ID=m
CONFIG_MI_THERMAL_INTERFACE=m
